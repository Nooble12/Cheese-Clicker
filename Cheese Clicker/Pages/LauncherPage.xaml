<Page x:Class="Cheese_Clicker.Pages.LauncherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cheese_Clicker.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LauncherPage"
      Background="Gray"
      
      >

    <Grid>
        <Button Style="{DynamicResource RoundedCornerButton}" Name="PlayButton" HorizontalAlignment="Center" VerticalAlignment="Center" Height="53" Width="140" Content="Play" Click="PlayButton_Click" Template="{DynamicResource CurvedButton}"/>
        <Button Style="{DynamicResource RoundedCornerButton}" x:Name="PatchNotesButton" HorizontalAlignment="Center" VerticalAlignment="Top" Height="54" Width="140" Content="Patch Notes" Click="PatchNotesButton_Click" Template="{DynamicResource CurvedButton}" Margin="0,256,0,0"/>
    </Grid>
</Page>
