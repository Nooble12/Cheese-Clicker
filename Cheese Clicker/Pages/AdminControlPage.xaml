<Page x:Class="Cheese_Clicker.Pages.AdminControlPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cheese_Clicker.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminControlPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="304" Height="143">
            <Button Name="GiveMultiplyMod" Content="+ 2 Final Multiplier" Click="GiveMultiplyMod_Click"></Button>
            <Button Name="GiveAddMod" Content="+ $100 Base" Click="GiveAddMod_Click"></Button>
            <Button Name ="AddCritChanceMod" Content="+ 20% Crit Chance" Click="GiveCritChance_Click"></Button>
            <Button Name ="AddCritMultiplierMod" Content="+ 2 Crit Multiplier" Click="GiveCritMultiply_Click"></Button>
            <Button Name ="ClearMods" Content="Clear All Modifiers" Click="ClearAllMods_Click"></Button>
        </StackPanel>

        <StackPanel Margin="248,268,248,80">
            <Button Name="GiveCheeseItem" Content="+ 1 Cheese Item" Click="GiveCheeseItem_Click"></Button>
            <Button Name="RemoveCheeseItem" Content="- 1 Cheese Item" Click="RemoveCheeseItem_Click"></Button>
            <Button Name="GiveComputerItem" Content="+ 1 Computer Item" Click="GiveComputerItem_Click"></Button>
            <Button Name="RemoveComputerItem" Content="- 1 Computer Item" Click="RemoveComputerItem_Click"></Button>
        </StackPanel>
        <Label Name="InventoryLabel" Content="Inventory: " Margin="10,150,566,154">
            
        </Label>
        
        <Button HorizontalAlignment="Left" VerticalAlignment="Bottom" Content="Back" Margin="10,0,0,10" Click="BackButton_Click" Width="97" Height="45"></Button>
    </Grid>
</Page>
