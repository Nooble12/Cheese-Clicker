<Page x:Class="Cheese_Clicker.Pages.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cheese_Clicker.Pages"
      mc:Ignorable="d" 
      Background="Gray"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GamePage">

    <Grid>
        <Button Name="cheeseButton" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Click Me" Background="White" Click="CheeseButton_Click" Height="90" Width="90"/>

        <Button Name ="shopButton" HorizontalAlignment="Left" VerticalAlignment="Center" Content="Shop" Click="ShopButton_Click" Height="192" Width="44"
    />
        <StackPanel Margin="10,10,433,336">
            <Label x:Name="MoneyLabel" FontSize="20" Content="Money: "/>
            <Label x:Name="ClickCountLabel" FontSize="20" Content="Clicks: "/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
            <Label Content="Modifers: " Width="240" Name="ModifierLabel"></Label>
        </StackPanel>

        <Button Name="GiveMultiplyMod" Content="Give Multiply Mod" Margin="133,321,523,78" Click="GiveMultiplyMod_Click"></Button>
        <Button Name="GiveAddMod" Content="Give Add Mod" Margin="133,265,523,134" Click="GiveAddMod_Click"></Button>
    </Grid>
</Page>
