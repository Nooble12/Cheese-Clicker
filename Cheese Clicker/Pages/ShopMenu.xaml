<Page  x:Class="Cheese_Clicker.ShopMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cheese_Clicker"
      
      mc:Ignorable="d" 
      Background="Gray"
    d:DesignHeight="450" d:DesignWidth="800"
      >

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="780">
            <Label Content="Shop " FontSize="40"/>
            <Label x:Name="balanceLabel" Content="Money: " FontSize="20"/>
        </StackPanel>

        <Button HorizontalAlignment="Left" VerticalAlignment="Bottom" Content="Back" Margin="10,0,0,10" Click="ShopBackButton_Click" Width="97" Height="45"></Button>

    </Grid>


</Page>
