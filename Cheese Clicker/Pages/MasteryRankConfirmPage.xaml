<Page x:Class="Cheese_Clicker.Pages.MasteryRankConfirmPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cheese_Clicker.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="Gray"
      Title="MasteryRankConfirmPage">

    <Grid>
        <Button HorizontalAlignment="Left" VerticalAlignment="Bottom" Content="Back" Margin="10,0,0,10" Click="BackButton_Click" Width="97" Height="45" Template="{DynamicResource CurvedButton}"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
            <Label Content="The following will be reset on mastery rank up:" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30" ></Label>
            <Label Content="1) Money" FontSize="30"></Label>
            <Label Content="2) Item Modifiers" FontSize="30"></Label>
            <Label Content="3) Inventory Items" FontSize="30" ></Label>
            <Label Content="In return, you will receive a permanent modifier." FontSize="30"></Label>
            <Button Content="Commit Mastery Rank Up" Click="CommitButton_Click" Height="88" Background="GreenYellow" FontSize="30" Template="{DynamicResource CurvedButton}"></Button>
        </StackPanel>
        
    </Grid>
</Page>
