<Page x:Class="Cheese_Clicker.Pages.InventoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cheese_Clicker.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InventoryPage"
      Background="Gray">

    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="180"/>
        <Label Name="InventoryValueLabel" Content="Total Inventory Value: " HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30" Width="780" Margin="0,10,0,0"/>
        <Grid Margin="10,68,243,60" x:Name="InventoryGrid">

        </Grid>
        <Grid Margin="0,68,10,60" x:Name="ItemInfoGrid" HorizontalAlignment="Right" Width="233">
            <Label Name="ItemNameLabel" Content="Item Name" HorizontalAlignment="Center" VerticalAlignment="Top"></Label>
            <Image x:Name="ItemImage" Margin="44,28,45,169"></Image>
            <Label Name="ItemDescLabel" Margin="10,161,10,55" Content="Label here" ></Label>
            <Button Margin="10,0,0,10" Name="UseItemButton" Content="Use Item" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="90" Height="40"></Button>
            <Button Margin="133,0,0,10" Name="SellItemButton" Content="Sell Item" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="90" Height="40"></Button>
        </Grid>
        <Button Name="SellAllItemButton" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="126" Content="Sell All Items" Background="Red" Click="SellAllButton_Clicked" Height="45"></Button>
        <Button HorizontalAlignment="Left" VerticalAlignment="Bottom" Content="Back" Margin="10,0,0,10" Click="BackButton_Click" Width="97" Height="45"></Button>
    </Grid>
</Page>
