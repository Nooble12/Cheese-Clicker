<Page x:Class="Cheese_Clicker.Pages.UseItemPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cheese_Clicker.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="Gray"
      Title="UseItemPage">

    <Grid>
        <Button HorizontalAlignment="Left" VerticalAlignment="Bottom" Content="Back" Margin="10,0,0,10" Click="BackButton_Click" Width="97" Height="45" Template="{DynamicResource CurvedButton}"/>
        <Label Name="SelectedItemLabel" Content="Selected Item: " HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="30" Width="800" Margin="10,10,0,0"></Label>
        <Label Name="UseItemMessage" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="30" Content="Item message here" HorizontalAlignment="Center" VerticalAlignment="Center" Width="780"></Label>
    </Grid>
</Page>
